generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Memorial{
  id          Int      @id @default(autoincrement())
  title       String   // 庙号，如"太祖"
  name        String   // 姓名，如"韩晨超"
  description String   // 描述，如"创始人，奠定基石"
  deed        String?  // 具体事迹
  tags        Tag[]    // 标签，用于区分不同类型的人物
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Tag {
  FOUNDER     // 创始人
  LEADER      // 领导者
  CONTRIBUTOR // 贡献者
  INNOVATOR   // 创新者
  MENTOR      // 导师
  VOLUNTEER   // 志愿者
}